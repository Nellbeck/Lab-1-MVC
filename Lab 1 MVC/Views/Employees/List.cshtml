@{
}

@model List<Lab_1_MVC.Models.EmployeeEntities.Employee>
    
<h1>Employees</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Phone</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.Id">Edit</a>
                    <a class="btn btn-primary" asp-controller="Absence" asp-action="Add" asp-route-id="@employee.Id">Absence</a>
                </td>
            </tr>
        }
    </tbody>
</table>